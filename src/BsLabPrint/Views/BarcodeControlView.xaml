             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BsLabPrint.Views"
             mc:Ignorable="d" 
             d:Height="250" d:Width="800" Background="White">
    <Grid Background="White" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="BarcodeInsert" HorizontalAlignment="Right" Margin="8"/>
        <TextBlock x:Name="TextInput" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="40,0,0,0" FontSize="70" 
               Foreground="Red" Text="Hehe"/>

    </Grid>
</UserControl>
